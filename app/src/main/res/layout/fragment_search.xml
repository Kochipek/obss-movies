<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_arrow_left" />

        <com.ipekkochisarli.obssmovies.common.CustomSearchView
            android:id="@+id/csvSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:CustomSearchView_hint="@string/Search" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/buttonToggleView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="end"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:src="@drawable/ic_grid" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSearchList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:padding="8dp"
        android:scrollbars="vertical" />

    <LinearLayout
        android:id="@+id/llEmptyList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center_horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_marginBottom="11dp"
            android:textAlignment="center"
            android:layout_marginTop="17dp"
            android:layout_marginHorizontal="50dp"
            android:layout_height="wrap_content"
            android:text="@string/emptylist" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBacktoHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="38dp"
            android:paddingVertical="10dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_search"
            android:text="@string/title_back_to_home"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>